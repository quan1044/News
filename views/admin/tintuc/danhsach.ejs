<%- include ('../layouts/head.ejs') %>


<body>
    <div id="wrapper">

        <%- include ('../layouts/navigation.ejs') %>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Tin tức
                            <small>Danh sách</small>
                        </h1>
                    </div>
          
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr align="center">
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Tóm tắt</th>
                                <th>Thể loại</th>
                                <th>Loại tin</th>
                                <th>Xem</th>
                                <th>Nổi bật</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lstTintuc.forEach(function(item){ %>
                                <tr class="odd gradeX" align="center">
                                    <td><%= item.ID %> </td>
                                    <td>
                                        <%= item.TieuDe %>
                                        <img class="news-image" src="upload/img/tintuc/<%= item.Hinh %> " alt="Girl in a jacket" width="500" height="600">
                                    </td>
                                    <td><%= item.TomTat %> </td>
                                    <td><%= item.TheLoai %> </td>
                                    <td><%= item.LoaiTin %> </td>
                                    <td><%= item.Xem %> </td>
                                    <td><%= item.NoiBat %> </td>
                                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="admin/tintuc/xoa/<%= item.id %>"> Xóa</a></td>
                                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="admin/tintuc/sua/<%= item.id %>">Sửa</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ('../layouts/script.ejs') %>
</body>

</html>