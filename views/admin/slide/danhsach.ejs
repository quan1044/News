<%- include ('../layouts/head.ejs') %>


<body>
    <div id="wrapper">

        <%- include ('../layouts/navigation.ejs') %>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Slide
                            <small>Danh sách</small>
                        </h1>
                    </div>
          
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr align="center">
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Hình</th>
                                <th>Nội dung</th>
                                <th>Link</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lstSlide.forEach(function(item){ %>
                                <tr class="odd gradeX" align="center">
                                    <td><%= item.id %> </td>
                                    <td><%= item.Ten %> </td>
                                    <td>
                                        <img style="width: 200px; height:auto" src="upload/img/slide/<%= item.Hinh %> " alt="Girl in a jacket" width="500" height="600">
                                    </td>
                                    <td><%= item.NoiDung %> </td>
                                    <td><%= item.link %> </td>
                                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="admin/slide/xoa/<%= item.id %>"> Xóa</a></td>
                                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="admin/slide/sua/<%= item.id %>">Sửa</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ('../layouts/script.ejs') %>
</body>

</html>