<%- include ('../layouts/head.ejs') %>


<body>

    <div id="wrapper">

        <%- include ('../layouts/navigation.ejs') %>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Thể loại
                            <small>Sửa<a href=""></a></small>
                        </h1>
                    </div>
                    <!-- /.col-lg-12 -->
                    <% messages('sua',locals) %> 
                    <%= locals.logged %> 
                
                    <div class="col-lg-7" style="padding-bottom:120px">
                        <% if (locals.errors) { %>
                            <% if (errors!=-1) { %>
                                <% for(var i=0; i<errors.length; i++) {%>
                                    <div class="col-lg-12 alert alert-danger" role="alert">
                                        <%= errors[i].msg %> 
                                    </div>
                                <% } %>
                            <% } %>
                        <% } %>
                        <form action="admin/theloai/sua" method="POST">
                            <div class="form-group" id="form">
                                <label>Thể loại<span style="color: red;">*</span></label>
                                <input class="form-control" name="tenTheLoai" placeholder="Mời bạn nhập tên thể loại" />
                            </div>
                            <button type="submit" class="btn btn-default" id="btnSubmit">Sửa</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                            <form>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ('../layouts/script.ejs') %>

    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function () {
                let id ='<%= id%>'
                $('#form').append("<input type='hidden' name='id' value='"+
                         id+"' />");
            });
        });
    </script>
</body>

</html>