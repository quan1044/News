<%- include ('../layouts/head.ejs') %>


<body>

    <div id="wrapper">

        <%- include ('../layouts/navigation.ejs') %>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Người dùng
                            <small>Thêm</small>
                        </h1>
                    </div>
                    <!-- /.col-lg-12 -->


                    <div class="col-lg-7" style="padding-bottom:120px">
                        <% if (locals.errors) { %>
                            <% if (errors!=-1) { %>
                                <% for(var i=0; i<errors.length; i++) {%>
                                    <div class="col-lg-12 alert alert-danger" role="alert">
                                        <%= errors[i].msg %>
                                    </div>
                                <% } %>
                            <% } %>
                        <% } %>
                        <form action="admin/user/them" method="POST">
                            <div class="form-group">
                                <label for="tieude">Tên người dùng <span style="color: red;">*</span></label>
                                <input id='txtName' class="form-control" name="name" placeholder="Mời bạn nhập tên người dùng" />
                            </div>
                            <div class="form-group">
                                <label>Email <span style="color: red;">*</span></label>
                                <input id='txtEmail' class="form-control" name="email" placeholder="Mời bạn nhập email" />
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu <span style="color: red;">*</span></label>
                                <input id='txtPassword' type="password" class="form-control" name="password" placeholder="Mời bạn nhập mật khẩu" />
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu <span style="color: red;">*</span></label>
                                <input id='txtRePassword' type="password" class="form-control" name="rePassword" placeholder="Mời bạn nhập lại mật khẩu" />
                            </div>
                            <div class="form-group">
                                <label>Quyền người dùng  </label>
                                <label class="radio-inline">
                                    <input type="radio" name="quyen" checked value="1">Admin
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="noibat" value="0">Thường
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">Thêm</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        <form>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ('../layouts/script.ejs') %>
</body>

</html>